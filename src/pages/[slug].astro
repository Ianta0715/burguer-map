              <div class="relative w-64 mx-auto">
                <!-- Contenedor del carrusel -->
                <div class="carousel-container overflow-hidden rounded-lg">
                  <div class="carousel-track flex transition-transform duration-300 ease-in-out">
                    <!-- Imagen 1 -->
                    <div class="carousel-slide w-64 flex-shrink-0">
                      <div class="aspect-square bg-gray-800 rounded-lg overflow-hidden h-64 w-64">
                        <img 
                          src={`/assets/${burger.data.title}/${burger.data.title}1.jpg`}
