      <!-- Contenido principal -->
      <div class="bg-custom-black border border-gray-700/30 rounded-3xl overflow-hidden">
        <!-- Header del lugar -->
        <div class="relative h-46 bg-gray-800">
          <img 
            src={`/assets/${burger.data.title}/${burger.data.img}`}
            alt={burger.data.title}
            width={120}
            height={120}
            class="w-full h-full object-cover"
            loading="lazy"
            
