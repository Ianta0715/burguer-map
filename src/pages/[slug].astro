            <!-- Informaci√≥n b√°sica -->
            <div class="space-y-6">
              <h2 class="text-2xl font-bold text-yellow-400 mb-4">Informaci√≥n</h2>
              
              <div class="space-y-4">
                <div class="flex items-center gap-4">
                  <span class="text-yellow-400 font-medium w-20">Precio:</span>
                  <span class="text-white font-bold text-lg">{burger.data.prize}</span>
                </div>
                
