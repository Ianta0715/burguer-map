                    <span class="text-white font-bold text-lg">{burger.data.size}</span>
                  </div>
                </div>
                
                <div class="flex items-center gap-4">
                  <span class="text-yellow-400 font-medium w-20">Ranking:</span>
                  <span class="text-white font-bold text-lg">#{burger.data.ranking}</span>
                </div>
                
