          <div class="absolute bottom-8 left-8 right-8">
            <div class="flex items-center gap-4 mb-4">
              
              
            </div>
            <h1 class="text-4xl font-bold text-white mb-2">{burger.data.title}</h1>
          </div>
        </div>

        <!-- Informaci√≥n detallada -->
        <div class="p-8">
