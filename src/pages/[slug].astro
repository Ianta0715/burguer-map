                      <div class="aspect-square bg-gray-800 rounded-lg overflow-hidden h-64 w-64">
                        <img 
                          src={`/assets/${burger.data.title}/${burger.data.title}2.jpg`}
                          alt={`${burger.data.title} - Vista 2`}
