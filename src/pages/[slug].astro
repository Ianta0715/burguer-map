---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const burguers = await getCollection('burguers');
  console.log('Generated paths:', burguers.map(b => ({ slug: b.id, title: b.data.title })));
  return burguers.map(burger => ({
    params: { slug: burger.id },
    props: { burger },
  }));
}

const { burger } = Astro.props;
const GOOGLE_MAPS_API_KEY = import.meta.env.GOOGLE_MAPS_API_KEY ;
---

<Layout>
  <Header />
  <main class="bg-custom-black min-h-screen py-12 px-4">
    <div class="max-w-6xl mx-auto">
      <!-- Bot√≥n de regreso -->
